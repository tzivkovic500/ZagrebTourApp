<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:id="@+id/expanded_food"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_padding"
            >

                <ImageView
                    android:layout_width="@dimen/list_item_height"
                    android:layout_height="@dimen/list_item_height"
                    android:id="@+id/image"
                    />

            <LinearLayout
                android:id="@+id/text_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/image"
                android:paddingLeft="16dp"
                >

                <TextView
                    android:id="@+id/place_name"
                    android:textSize="@dimen/name_text_size"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/place_info"
                    android:textSize="@dimen/type_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_below="@id/place_name"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>

                <ImageView
                    android:src="@drawable/ic_info_white_24dp_hdpi"
                    android:id="@+id/info_button"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"

                    />


        </RelativeLayout>
    </FrameLayout>

    <!-- Collapsed/Expanded Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="horizontal"
        android:id="@+id/collapsed_layout"
        android:background="@color/colorTextPrimary"
        android:visibility="gone"
        >
        <LinearLayout
            style="@style/place_info_layout_style"
            android:id="@+id/location"
            >
            <ImageView
                style="@style/icon_image_style"
                android:src="@drawable/ic_location_on_white_24dp"
                />
            <TextView
                style="@style/place_info_text_style"
                android:id="@+id/test_info"
                android:text="@string/place_location"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/place_info_layout_style"
            android:id="@+id/website"
            >
            <ImageView
                style="@style/icon_image_style"
                android:src="@drawable/ic_open_in_browser_white_24dp"
                />
            <TextView
                style="@style/place_info_text_style"
                android:text="Website"

                />
        </LinearLayout>
        <LinearLayout
            style="@style/place_info_layout_style"
            android:id="@+id/food_back"
            >
            <ImageView
                style="@style/icon_image_style"
                android:src="@drawable/ic_arrow_back_white_24dp"
                />
            <TextView
                style="@style/place_info_text_style"
                android:text="Back"

                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>