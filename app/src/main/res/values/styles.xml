<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- ImageView common style -->
    <style name="imageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="resideBottomImageViews">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:tint">@color/titleColor</item>
    </style>
    <style name="icon_image_style">
        <item name="android:layout_width">@dimen/icon_image_size</item>
        <item name="android:layout_height">@dimen/icon_image_size</item>
        <item name="android:tint">@color/titleColor</item>
    </style>
    <style name="place_info_layout_style">
        <item name="android:layout_width">@dimen/nullSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="place_info_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:layout_marginTop">@dimen/food_text_margin_top</item>
    </style>
    <style name="text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>



</resources>
